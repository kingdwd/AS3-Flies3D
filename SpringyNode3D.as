package {	public class SpringyNode3D extends Node3D {		internal var target:Vector3D;		internal var k:Number		= 0.05/4;		internal var d:Number		= 0.1;				public function SpringyNode3D(tx:Number = 0, ty:Number = 0, tz:Number = 0) {			super(tx, ty, tz);			target = new Vector3D();		}				public function setTarget(t:Vector3D) {			target = t.clone();		}				public function setTarget3(x, y, z) {			target.set(x, y, z);		}						override public function update() {			vel.x += (target.x - pos.x) * k - vel.x * d;			vel.y += (target.y - pos.y) * k - vel.y * d;			vel.z += (target.z - pos.z) * k - vel.z * d;		}			}	}