package {		import flash.display.*;	import flash.events.*;	import flash.text.*;		import flash.net.*;		public class MemoURL extends Sprite {				public function MemoURL(str:String = 'www.memo.tv') {			var tf:TextField = new TextField();			tf.setTextFormat(new TextFormat('_sans', 15));			tf.text = str;			tf.autoSize = TextFieldAutoSize.LEFT;			tf.selectable = false;						addChild(tf);						addEventListener(MouseEvent.MOUSE_DOWN, onClick);			buttonMode = true;			addEventListener(Event.ADDED_TO_STAGE, addedToStage);		}				private function addedToStage(e:Event) {			stage.addEventListener(Event.RESIZE, onResize);			onResize();			trace('MemoURL::addedToStage');		}				private function onResize(e:Event = null) {			x = (stage.stageWidth - width) - 20;			y = (stage.stageHeight - height) - 20;		}						private function onClick(e:MouseEvent) {			navigateToURL(new URLRequest('http://www.memo.tv'), '_blank');		}								}}